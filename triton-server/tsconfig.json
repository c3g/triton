{
    "extends": "./tsconfig.path.json",
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "moduleResolution": "node"
    },
    "include": ["./src", "./*.ts"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "exclude": ["node_modules/"]
}
